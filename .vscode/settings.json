{
    /* ============================================================================================================================ */
    /* ----------------------------------------------------- General Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Terminal settings
    "terminal.integrated.scrollback": 50000,

    /* ============================================================================================================================ */
    /* ------------------------------------------------------ Search Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Excluded directories
    "files.exclude": {
        "${workspaceFolder}/spike/**": true,
        "${workspaceFolder}/dist/**": true,
    },
    // Exclude files from watcher
    "files.watcherExclude": {
        "${workspaceFolder}/spike/**": true,
        "${workspaceFolder}/dist/**": true,
    },

    // Search settings
    "search.useIgnoreFiles": false,

    /* ============================================================================================================================ */
    /* ------------------------------------------------------ Editor Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */
    
    // Words-wrap [soft]
    "editor.wordWrap": "off",
    // Words-wrap [hard]
    "rewrap.autoWrap.enabled": false,
    "rewrap.wrappingColumn": 130,
    
    // Intendation
    "editor.detectIndentation": false,
    "editor.autoIndent": "full",
    "editor.tabSize": 4,

    /* ============================================================================================================================ */
    /* ----------------------------------------------------- Python Settings ------------------------------------------------------ */
    /* ============================================================================================================================ */

    // Python extra path
    "python.analysis.extraPaths": [
        
    ],
    // Python autocomplete
    "python.autoComplete.extraPaths": [
        
    ],

    /* ============================================================================================================================ */
    /* ------------------------------------------------------ Visual Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Icons
    "vsicons.associations.files": [
        { "icon": "excel2",       "extensions": ["csv"],           "format": "svg" },
    ],
    "vsicons.associations.folders": [
        { "icon": "plugin",       "extensions": ["extern", "dep"], "format": "svg" },
        { "icon": "component",    "extensions": ["spike"        ], "format": "svg" },
    ],

    /* ============================================================================================================================ */
    /* ---------------------------------------------------- Formatting Settings --------------------------------------------------- */
    /* ============================================================================================================================ */

    // Header's configuration
    "psi-header.config": {
        "forceToTop": true,
        "initials": "K.P.",
        "author": "Krzysztof Pierczyk",
        "blankLinesAfter": 1,
        "authorEmail": "krzysztof.pierczyk@gmail.com",
        "creationDateZero": "asIs"
    },

    // Header's tracking configuration
    "psi-header.changes-tracking": {
        "isActive": true,
        "modDate": "@modified",
        "modDateFormat": "dd-MM-yyyy hh:nn:ss",
        "enforceHeader": false,
        "autoHeader": "off",
        "updateLicenseVariables": true,
    },

    // Custom variables
    "psi-header.variables": [
        ["projectname", "py-utils"]
    ],

    // Language configuration
    "psi-header.lang-config": [
        {
            "language": "shellscript",
            "begin": "# ====================================================================================================================================",
            "end": "# ====================================================================================================================================",
            "prefix": "# ",
        },
        {
            "language": "python",
            "begin": "# ====================================================================================================================================",
            "end": "# ====================================================================================================================================",
            "prefix": "# ",
            "afterHeader": [
                "# ============================================================== Doc =============================================================== #",
                "",
                "\"\"\" ",
                "",
                ".. module:: ",
                "   :platform: OS Independent",
                "   :synopsis: ",
                "",
                ".. moduleauthor:: <<author>> <<<authoremail>>>",
                "",
                "\"\"\"",
                "",
                "# ============================================================ Imports ============================================================= #",
                "",
                "",
                "",
                "# ============================================================ Script ============================================================== #",
                "",
                "",
                "",
                "# ================================================================================================================================== #",
            ]
        },
        {
            "language": "yaml",
            "mapTo": "shellscript"
        },
        {
            "language": "latex",
            "begin": "% ====================================================================================================================================",
            "end": "% ====================================================================================================================================",
            "prefix": "% ",
        },
        {
            "language": "bibtex",
            "mapTo": "latex"
        },
        {
            "language": "bat",
            "begin": ": ====================================================================================================================================",
            "end": ": ====================================================================================================================================",
            "prefix": ": ",
        },
        {
            "language": "plantuml",
            "begin": "/'' ==================================================================================================================================",
            "end": " ' ================================================================================================================================ '/",
            "prefix": " ' "
        },
        {
            "language": "xml",
            "begin": "<!-- =================================================================================================================================",
            "end": "  - ============================================================================================================================== -->",
            "prefix": "  - "
        },
    ],

    // Templates configuration
    "psi-header.templates": [
        {
            "language": "python",
            "template": [
                "@file       <<filename>>",
                "@author     <<author>> (<<authoremail>>)",
                "@maintainer <<author>> (<<authoremail>>)",
                "@date       <<filecreated('dddd, Do MMMM YYYY h:mm:ss a')>>",
                "@modified   <<dateformat('dddd, Do MMMM YYYY h:mm:ss a')>>",
                "@project    <<projectname>>",
                "@brief      ",
                "",
                "",
                "@copyright <<author>> Â© <<year>>"
            ]
        },
        {
            "language": "yaml",
            "mapTo": "python"
        },
        {
            "language": "shellscript",
            "mapTo": "python"
        },
        {
            "language": "latex",
            "mapTo": "python"
        },
        {
            "language": "bibtex",
            "mapTo": "python"
        },
        {
            "language": "bat",
            "mapTo": "python"
        },
        {
            "language": "plantuml",
            "mapTo": "python"
        },
        {
            "language": "xml",
            "mapTo": "python"
        },
    ],

    // Comment divider
    "comment-divider" : {
        "length" : 134,
        "shouldLengthIncludeIndent" : true,
        // Main header
        "mainHeaderFiller" : "=",
        "mainHeaderHeight" : "block",
        "mainHeaderAlign" : "center",
        // Subheader
        "subheaderFiller" : "=",
        "subheaderHeight" : "line",
        "subheaderAlign" : "center",
        // Sold line
        "lineFiller" : "=",
        // Language map
        "languagesMap" : {
            "python" :  [ "#", "#" ],
            "shellscript" :  [ "#", "#" ],
            "cmake" :  [ "#", "#" ],
            "cpp" :  [ "/*", "*/" ],
            "jsonc" :  [ "/*", "*/" ],
        },
    },
    "ros.distro": "humble",

}